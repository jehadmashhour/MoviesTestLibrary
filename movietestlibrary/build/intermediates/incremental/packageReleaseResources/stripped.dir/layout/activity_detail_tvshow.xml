    <LinearLayout
        android:id="@+id/lnTvShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/activity_detail_tvshow_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.feature.detailmovie.DetailMovieActivity">

        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/shimmerTvShowDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_animation_duration="800"
            app:shimmer_auto_start="true" android:tag="binding_1">

            <include layout="@layout/item_shimmer_detail" />

        </io.supercharge.shimmerlayout.ShimmerLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/layoutDataDetailTvShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">


                    <com.github.florent37.shapeofview.shapes.DiagonalView
                        android:id="@+id/shapeView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:elevation="5dp"
                        android:paddingBottom="8dp"
                        app:shape_diagonal_angle="-10"
                        app:shape_diagonal_position="bottom">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@color/colorPrimary"
                            android:tag="binding_2"        />


                    </com.github.florent37.shapeofview.shapes.DiagonalView>

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:elevation="10dp"
                        android:src="@drawable/ic_arrow_back_black_24dp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="16dp"
                        android:elevation="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="160dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@color/colorAccent"
                                android:tag="binding_3"            />
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fbFavoriteTvShow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="16dp"
                        android:backgroundTint="#fff"
                        android:src="@drawable/heart_gray"
                        app:borderWidth="0dp"
                        android:tag="binding_4"                                                         
                        app:fabSize="normal"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/tvTitleDetailTvShow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@id/tvSeason"
                        android:fontFamily="@font/ml"
                        android:paddingRight="8dp"
                        android:text="IT"                            
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp"
                        android:textStyle="bold"  android:tag="binding_5"/>

                    <TextView
                        android:id="@+id/tvSeason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bgruntime"
                        android:fontFamily="@font/mr"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="4dp"
                        android:text="0"                                                                   
                        android:textColor="@android:color/white"
                        android:textSize="12sp"  android:tag="binding_6"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitleDetail"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/mr"
                    android:paddingRight="8dp"
                    android:text="Horror"                       
                    android:textSize="11sp"
                    android:textStyle="italic"  android:tag="binding_7"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp">

                    <RatingBar
                        android:id="@+id/rates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:max="10"
                        android:numStars="5"
                        android:rating="3"                   
                        android:stepSize="0.5"  android:tag="binding_8"/>

                    <TextView
                        android:id="@+id/tvRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/rates"
                        android:text="0.0"                                                  
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"  android:tag="binding_9"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/mr"
                    android:text="overview"                             
                    android:textSize="16sp"  android:tag="binding_10"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

         