<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                           

                 
                        
                                                                                          

                 
                      
                            

                 
                        
                            

                 
                          
                                                                              
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical" android:tag="layout/item_favorite_movies_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="155dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/mm"
                        android:maxLines="2"
                        android:text="IT"                          
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"  android:tag="binding_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/bgruntime"
                        android:fontFamily="@font/mr"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:text="0"                
                        android:textColor="@android:color/white"
                        android:textSize="10sp"  android:tag="binding_2"/>


                    <TextView
                        android:id="@+id/tvOverview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/mr"
                        android:maxLines="3"
                        android:text="Overview"                             
                        android:textSize="11sp"  android:tag="binding_3"/>

                    <TextView
                        android:id="@+id/tvItemDetailsFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvOverview"
                        android:contentDescription="tvItemDetailMovie"
                        android:fontFamily="@font/mm"
                        android:tag="binding_4"                                                      
                        android:text="Details"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </FrameLayout>

        <FrameLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/imgPosterPath"
                        android:layout_width="125dp"
                        android:layout_height="185dp"
                        android:scaleType="centerCrop"
                                            
                        app:srcCompat="@color/colorAccent"  android:tag="binding_5"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/ic_fiber_manual_record_black_24dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/mm"
                    android:gravity="center"
                    android:text="0"                                              
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_anchor="@id/imgPosterPath"
                    app:layout_anchorGravity="bottom|end"  android:tag="binding_6"/>


            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </FrameLayout>

    </RelativeLayout>
         